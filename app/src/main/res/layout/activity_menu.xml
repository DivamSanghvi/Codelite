<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#205AFC"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_MP"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="184dp"
        android:layout_height="66dp"
        android:text="@string/signDetection" />

    <Button
        android:id="@+id/btn_stt"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:text="@string/speakIn" />

    <EditText
        android:id="@+id/etResult"
        android:layout_width="wrap_content"
        android:layout_height="218dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:hint="@string/out_message"
        android:textColor="#E9E0E0"
        android:textColorHighlight="#FBF5F5"
        android:textColorLink="#FBF5FB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_tts"
            android:layout_width="137dp"
            android:layout_height="72dp"
            android:text="@string/speakOut" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblPitch"
                android:textColor="#F0EAEA"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seek_bar_pitch"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblSpeed"
                android:textColor="#EBE5E5"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seek_bar_speed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:progress="50" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="373dp"
        android:layout_height="164dp"
        app:srcCompat="@drawable/c4" />


</LinearLayout>